<% form_for @workshop do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :short_description %><br />
    <%= f.text_area :short_description %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
