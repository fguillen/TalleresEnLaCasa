<% form_for @workshop do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :short_description %>
    <%= f.text_area :short_description %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description, :class => 'edition' %>
  </p>
  
  <p>
    <%= f.label :price %>
    <%= f.text_field :price %>
  </p>

  <p><%= f.submit "Submit" %></p>
<% end %>
